<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade2"
    tools:context=".Activities.ImageDetailActivity">

    <TextView
        android:id="@+id/textNameDetailPhoto"
        android:layout_width="449dp"
        android:layout_height="63dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/material_button"
        android:backgroundTint="@color/purple_700"
        android:fontFamily="@font/nunito"
        android:paddingTop="10dp"
        android:text="name user"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageUserZoomid"
        android:layout_width="362dp"
        android:layout_height="281dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/white_frame"
        android:backgroundTint="#803E3E3C"
        android:padding="10dp"
        android:src="@drawable/avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.341"></ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>